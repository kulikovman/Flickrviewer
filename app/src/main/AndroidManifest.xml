<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.kulikovman.flickrviewer">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PhotoListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_fullscreen_activity"
            android:parentActivityName=".PhotoListActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.kulikovman.flickrviewer.PhotoListActivity"/>
        </activity>
        <activity android:name=".MapActivity"
                  android:label="@string/title_map_activity"
                  android:parentActivityName=".PhotoListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.kulikovman.flickrviewer.PhotoListActivity"/>
        </activity>
    </application>

</manifest>